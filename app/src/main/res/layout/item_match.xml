<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteApp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp">


        <ImageView
            android:id="@+id/img_squad1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/switzerland" />

        <ImageView
            android:id="@+id/img_squad2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/republic_of_poland" />

        <TextView
            android:id="@+id/txt_squad1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/txt_score"
            android:layout_toRightOf="@+id/img_squad1"
            android:ellipsize="end"
            android:gravity="left"
            android:text="Switzerland"
            android:textColor="@color/grayApp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_squad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_squad2"
            android:layout_toRightOf="@+id/txt_score"
            android:ellipsize="end"
            android:gravity="right"
            android:text="Poland"
            android:textColor="@color/grayApp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1 - 0"
            android:textColor="@color/blueApp"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>